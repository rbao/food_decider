= f.label :name
= f.text_field :name, class: 'input-block-level'

= label_tag 'Select the restaurants you want others to choose from.'

%table.table.table-striped
  -@restaurants.each do |restaurant|
    %tr.restaurant
      %td= check_box_tag 'decision[restaurant_ids][]', restaurant.id, f.object.restaurant_ids.include?(restaurant.id)
      %td= render 'restaurants/restaurant_td', restaurant: restaurant
        